{
  "name": "ui",
  "version": "1.0.0",
  "description": "Browser interface",
  "main": "./src/ts/index.ts",
  "scripts": {
    "install-packages-core": "npm install file:../model/client --force",
    "install-packages": "npm-run-all install-packages-core",
    "clean-js": "rimraf ./src/js",
    "tsc": "tsc",
    "copy-public-local": "copyfiles -u 1 ./src/js/**/*.js ./public",
    "copy-public-server": "copyfiles ./public/**/* ../server/",
    "transpile": "npm-run-all install-packages clean-js tsc copy-public-local copy-public-server",
    "mocha": "mocha --reporter spec ./src/js/test/**/*.spec.js",
    "test": "npm-run-all transpile mocha",
    "run-server": "concurrently \"cd ../server && npm run run-server && cd ../..\"",
    "run-browser": "start http://localhost:3000",
    "start": "npm-run-all transpile --parallel run-server run-browser"
  },
  "author": "Stephen Trudel",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "concurrently": "^7.0.0",
    "copyfiles": "^2.4.1",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "~4.5.4"
  },
  "dependencies": {
    "model-client": "file:../model/client"
  }
}
